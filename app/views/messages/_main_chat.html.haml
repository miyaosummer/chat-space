.chat-main
  .chat-main__group-info
    .chat-main__group-info__left-side
      = @group.name
      .chat-main__group-info__left-side__lower-side
        Member:
        .chat-main__group-info__left-side__lower-side__member
          -@group.group_users.each do |number|
            =number.user.name
    .chat-main__group-info__right-side
      = link_to edit_group_path(@group), class: "chat-main__group-info__right-side__btn" do
        = "Edit"
  .messages
    = render @messages
  .chat-main__message-form
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: 'input-box', placeholder: 'type a message'
      .input-box__form__mask
        = f.label :image, class: 'input-box__form__mask__text' do
          = icon('fas', 'image', class: 'input-box__form__mask__icon')
          = f.file_field :image, class: 'input-box__form__icon__file'
      = f.submit 'Send', class: 'submit'
      