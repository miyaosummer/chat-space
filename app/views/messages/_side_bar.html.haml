.side-bar
  .side-bar__user-name
    .side-bar__user-name__top-items
      = current_user.name
      .side-bar__user-name__top-items__name
      .side-bar__user-name__top-items__icons
        = link_to new_group_path(current_user) do
          = icon('far','edit',class: "side-bar__user-name__top-items__icons__btn")
        = link_to edit_user_path(current_user) do
          = icon('fas','cog', class: 'side-bar__user-name__top-items__icons__btn')
  .side-bar__groups-list
    .side-bar__groups-list__num
      - current_user.groups.each do |group|
        .group
          = link_to group_messages_path(group) do
            .group__name
              = group.name
            .group__message
              = group.show_last_message
